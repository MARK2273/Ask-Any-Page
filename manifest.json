{
  "manifest_version": 3,
  "name": "AskAnyPage - AI Assistant",
  "version": "1.0.0",
  "description": "Analyze and ask questions about any webpage using Google Gemini.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.ts"]
    }
  ]
}
